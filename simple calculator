function calculator(a,b,sign){
switch(sign) {
    case '+': return  a + b;  break;
    case '-': return  a - b;  break;
    case '*': return  a * b;  break;
    case '/': return b!==0 ? a / b : null; break;
    default: return 'unknown value';
}
}
