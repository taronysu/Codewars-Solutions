function doubleCheck(str){
    return /(.)\1/gi.test(str);
  }
  
// Another Solution 

function doubleCheck(str){
    str = str.toLowerCase().split('');

    for (let i = 0; i < str.length; i++) {
      if (str[i] === str[i + 1])
        return true;
}
  return false;
  }
